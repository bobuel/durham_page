<%= form_for @tag do |f| %>
	<%= f.error_messages %>
	<p> 
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<h3> Assign to Plants </h3>
		<%= f.collection_select(:plant_ids, Plant.all, :id, :name, {}, {multiple: true}) %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %> 
