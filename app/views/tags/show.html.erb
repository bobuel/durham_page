<h1> Show Tag </h1>

<%= render @tag %> 

<% content_for :details do %>
	<h3> Associated Plants </h3>
	<ul> 
		<% @plants.each do |plant| %>
			<li> <%= plant.name %> </li>
		<% end %>
	</ul>

	<h3> Associated Planters </h3>

	<ul>
		<% @planters.each do |planter| %>
			<li> <%= planter.name %> </li>
		<% end %>
	</ul>
<% end %>

<%= render 'tag_options' %>