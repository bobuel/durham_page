<h1> Requests </h1> 

<table>
	<tr>
		<th> Description </th>
		<th> Request_ID </th>
		<th> Request_Date </th>
		<th> Space_ID </th>
		<th> Submitted </th>
		<th> Viewed </th>
		<th> Designed </th>
	</tr>

	<% @requests.each do |request| %>
		<tr>
			<td> <%= request.description %> </td>
			<td> <%= request.id %> </td> 
			<td> <%= request.created_at %> </td>
			<td> <%= request.space_id %> </td>
			<td> <%= request.submitted %> </td> 
			<td> <%= request.viewed %> </td>
			<td> <%= request.designed %> </td>
			<td> <%= link_to 'Show', user_request_path(current_user, request) %> </td>
			<td> <%= link_to 'Edit', edit_user_request_path(current_user, request) %> </td>
			<td> <%= link_to 'Delete', user_request_path(current_user, request), method: :delete %> </td>
			<td> <%= link_to 'Assignments', request_request_assignments_path(request) %> </td>
			<td> <%= link_to 'Designs', request_suggested_designs_path(current_user, request) %> </td>
		</tr>
	<% end %>
</table>

<%= render 'request_links' %>