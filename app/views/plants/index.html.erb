<h1> Plant Index </h1> 

<table> 
	<tr>
		<th> Name </th>
		<th> Description </th>
	</tr>

	<% @plants.each do |plant| %>
		<tr>
			<td> <%= plant.name %> </td>
			<td> <%= plant.description %> </td>
			<td> <%= link_to 'Show', plant_path(plant) %> </td>
		</tr>
	<% end %>
</table>

<% content_for(:admin_options) do %>
	<%= link_to "New Plant", new_plant_path %> 
<% end %>